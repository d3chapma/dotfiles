alias be='bundle exec'
alias bi='bundle install -j 8'
alias dotfiles='subl ~/Projects/dotfiles'

alias ga='git add'
alias gb='git branch'
alias gc='git commit -v'
alias gco='git checkout'
alias gcm='git checkout master'
alias gd='git diff'
alias gds='git diff --staged'
alias gm='git merge'
alias gpr='git pull --rebase'
alias gf='git fetch -p'

alias dbreset='rake db:drop && rake db:create && pg_restore --verbose --host localhost --username dc --clean --no-owner --no-acl --dbname d3m_development db/staging.dump'
alias dbresetl='rake db:drop && rake db:create && pg_restore --verbose --host localhost --username dc --clean --no-owner --no-acl --dbname d3m_development db/live.dump'
alias dbdump='pg_dump -Fc d3m_development > db/staging.dump'
alias postdump='aws s3 cp db/staging.dump s3://d3m-misc/latest.dump --acl public-read'
alias prepdump='rake strip:data && rake password:reset'
alias ldump='curl -o db/live.dump `heroku pg:backups public-url`'
alias ndump='heroku pg:backups capture -a teldiod3'
alias updatedump='prepdump && dbdump && postdump && updatestaging'
alias updatestaging='heroku pg:backups:restore 'https://s3.amazonaws.com/d3m-misc/latest.dump' -a teldiod3test'

alias sr='rake db:test:prepare && spring rspec'

alias elasticsearch='cd ~/elasticsearch-2.3.3 && ./bin/elasticsearch'
