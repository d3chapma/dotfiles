alias be='bundle exec'
alias bi='bundle install -j 8'
alias dotfiles='code ~/Projects/dotfiles'

alias ga='git add'
alias gb='git branch'
alias gc='git commit -v && trkr run --gtm'
alias gco='git checkout'
alias gcm='git checkout master'
alias gd='git diff'
alias gds='git diff --staged'
alias gm='git merge'
alias gpr='git pull --rebase'
alias gf='git fetch -p'
alias gu='BRANCH=$(git symbolic-ref --short HEAD) && git branch --set-upstream-to=origin/$BRANCH $BRANCH'

alias dbreset='DISABLE_DATABASE_ENVIRONMENT_CHECK=1 rake db:drop && rake db:create && pg_restore --verbose --host localhost --username dc --clean --no-owner --no-acl --dbname d3_development db/staging.dump'
alias dbresetl='DISABLE_DATABASE_ENVIRONMENT_CHECK=1 rake db:drop && rake db:create && pg_restore --verbose --host localhost --username dc --clean --no-owner --no-acl --dbname d3_development db/live.dump'
alias dbdump='pg_dump -Fc d3_development > db/staging.dump'
alias postdump='aws s3 cp db/staging.dump s3://d3m-misc/latest.dump --acl public-read'
alias prepdump='rake strip:data && rake password:reset'
alias ldump='curl -o db/live.dump `heroku pg:backups public-url`'
alias ndump='heroku pg:backups capture -a teldiod3'
alias updatedump='prepdump && dbdump && postdump && updatestaging'
alias updatestaging='heroku pg:backups:restore 'https://s3.amazonaws.com/d3m-misc/latest.dump' -a teldiod3test'

alias sr='rake db:test:prepare && spring rspec'

alias elasticsearch='cd /usr/local/opt/elasticsearch@5.6 && ./bin/elasticsearch'
